{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/openapi": "^1.4.11",
    "better-auth": "^1.3.13",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "elysia": "^1.3.21",
    "kysely": "^0.28.7",
    "kysely-postgres-js": "^3.0.0",
    "pg": "^8.14.1",
    "postgres": "^3.4.7",
    "zod": "^4.0.2",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "tsdown": "^0.15.1",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.2",
    "@types/pg": "^8.11.11"
  }
}
